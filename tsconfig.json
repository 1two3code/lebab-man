{
    "compilerOptions": {

        "allowJs": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,

        "target": "es5",

        "outDir": "src/js/",
        "sourceMap": true,

        "typeRoots": [
            "./node_modules/@types",
            // Short-term workaround to get gtp's type declarations picked up
            "./node_modules/gtp"
        ]
    },
    "include": [
        "src/app/**/*.ts"
    ]
}

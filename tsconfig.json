{
    "compilerOptions": {

        "allowJs": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        //"noUnusedLocals": true,
        //"noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,

        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",

        "outDir": "src/js/",
        "sourceMap": true,

        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/app/**/*.ts"
    ]
}
